@page
@attribute [RazorCompiledItemMetadata("RouteTemplate", RouteHelper.ForgotPassword)]
@using Microsoft.AspNetCore.Razor.Hosting
@model IdentityClaimsPlay.Areas.Identity.Pages.Account.ForgotPasswordModel

@{
  ViewData["Title"] = "Forgot your password?";
}

<section class="offset">
  <h1><span class="far fa-user-lock" aria-hidden="true"></span> @ViewData["Title"]</h1>

  <hr />
  <p>Enter your email address in the box below, click the Send button, and we'll send you a link to reset your password.</p>

  <form id="account" method="post">
    <div class="form-floating mb-3">
      <input type="email" asp-for="Input.Email" class="form-control" id="floatingInput" placeholder="name@example.com">
      <label for="floatingInput">Email address</label>
      <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <div class="text-right">
      <button type="submit" class="btn btn-primary">Send</button>
    </div>
  </form>
</section>